<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site" method="upgrade">
	<name>blue_design</name>
	<creationDate>January 18, 2013</creationDate>
	<author>Thecoders.vn</author>
	<authorEmail>mr_hiennc@yahoo.com</authorEmail>
	<authorUrl>http://thecoders.vn</authorUrl>
	<copyright>Copyright (C) 2013 Thecoders.vn. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.5.0</version>
	
	<description>
		<![CDATA[ <div style="font-size:10px;">
			<a target="_blank" href="http://Thecoders.vn"><b>Blue Design</b></a><br><br>
				<i>Blue Design Template is a clean business or portfolio Joomla 2.5/3.0 template built with a clean and crisp, pixel by pixel concept. Blue Design comes packed with various extensions and an interactive admin option panel. This is a design that is creative, flexible, scalable, and a offers a lot more, all working off the power of Joomla! Blue Design is built totally for Joomla without the use of complicated messy frameworks. You get stability, flexibility, scalability, and more !
				</i><br><br>
			<a target="_blank" href="http://Thecoders.vn"><i>Thecoders.vn - Free Joomla 2.5 Extensions, Joomla Modules, Joomla Plugins.</i></a>
		</div>]]>
	</description>

	<files>
		<folder>css</folder>
		<folder>js</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>fonts</folder>
		<folder>libs</folder>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
	</files>
	
	<positions>
		<position>debug</position>
		<position>breadcrumbs</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		
		<position>left</position>
		<position>right</position>
		<position>slideshow</position>
		<position>top-menu</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_blue_design.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="templates/blue_design/libs/elements">
			<fieldset name="basic">
				<field 
					name="templateWidth" 
					type="radio" 
					default="0" 
					label="TPL_OF_THECODER_TEMPLATE_WIDTH" 
					description="TPL_OF_THECODER_TEMPLATE_WIDTH_DESC">
						<option value="0">Static</option>
						<option value="1">Fluid</option>
				</field>
				<field 
					name="columnWidth" 
					type="list" 
					default="3" 
					label="TPL_OF_THECODER_COLUMN_WIDTH" 
					description="TPL_OF_THECODER_COLUMN_WIDTH_DESC">
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
				</field>
				<field 
					name="languageDirection" 
					type="radio" 
					default="ltr" 
					label="TPL_OF_THECODER_LANGUAGE_DIRECTION" 
					description="TPL_OF_THECODER_LANGUAGE_DIRECTION_DESC">
						<option value="ltr">LTR</option>
						<option value="rtl">RTL</option>
				</field>
			</fieldset>
			
			<fieldset name="LOGO">
				<field type="xspacer" />
				<field 
					name="logo" 
					type="media"
					label="TPL_OF_THECODER_LOGO" 
					description="TPL_OF_THECODER_LOGO_DESC" 
					default="" />
				<field 
					name="siteTitle" 
					type="text" 
					default=""
					label="TPL_OF_THECODER_SITETITLE"
					description="TPL_OF_THECODER_SITETITLE"
					size="50"
					filter="string" />
				<field 
					name="siteDescription"  
					type="text" 
					default=""
					label="TPL_OF_THECODER_DESCRIPTION"
					description="TPL_OF_THECODER_DESCRIPTION_DESC"
					size="50"
					filter="string" />					
				<field 
					name="copyright" 
					type="text" 
					default="Copyright 2012 (c) Thecoders.vn. All rights reserved."
					label="TPL_OF_THECODER_COPYRIGHT"
					description="TPL_OF_THECODER_COPYRIGHT_DESC"
					size="50"
					filter="string" />
				<field 
					name="customcss" 
					type="radio" 
					default="1" 
					label="TPL_OF_THECODER_CUSTOM_CSS" 
					description="TPL_OF_THECODER_CUSTOM_CSS_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>								
			</fieldset>
		</fields>
	</config>
</extension>